<%- include('../admin-sidebar.ejs') %>
<div class="w-3/5">
    <div class="flex justify-between mb-4">
        <div>
            <h1 class="text-3xl font-medium">Blog Update</h1>
        </div>
        
    </div>
    <form action="/blogupdate/<%= edit._id %>" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="">title</label>
            <input type="text" class="form-control" name="title" value="<%= edit.title %>">
        </div>
        <div class="mb-3">
            <label for="">Description</label>
            <textarea type="text" name="description" class="form-control" id="" cols="30" rows="10"><%= edit.description %></textarea>
           
        

        <div class="md-3 mb-3">
            <label for="">Upload image</label>
            <input type="file" name="image" class="form-control">
        </div>
        </div>
        <img src="<%= edit.image.url %>" width="40px" alt="">


      <!--  <button type="submit" class="btn btn-primary bg-blue-500">update</button>-->
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-secondary me-2 bg-slate-500" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary bg-blue-500">Submit</button>
        </div>
    </form>
</div>

