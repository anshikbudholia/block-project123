<%- include('../../featured.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<%- include('../admin-sidebar.ejs') %>


<!-- blog-list  -->
<div class="w-3/5">
    <div class="flex justify-between mb-4">
        <div>
            <h1 class="text-3xl font-medium">Blog List</h1>
        </div>
        <div>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-success bg-green-500" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Blog
            </button>
        </div>
    </div>
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>
            </tr>
           

        </thead>
        <tbody>
            <% d.forEach((item)=>{ %>
                <tr>
                    <th scope="row"><%= item._id %></th>
                    <td><%= item.title%></td>
                    <td><%= item.description %></td>
                    <td><img src="<%= item.image.url %>" width="50px" alt=""></td>
                    
                    
                    <td class="space-x-3">
                        <a href="/admin/blogview/<%= item._id %>">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a href="/admin/blogedit/<%= item._id %>">
                            <i class="fa-regular fa-pen-to-square text-blue-500 "></i>
                        </a>
                        <a href="/admin/blogdelete/<%= item._id %>">
                            <i class="fa-solid fa-trash-can text-red-500"></i>
                        </a>
                    </td>
                </tr>

            <% }) %>
        </tbody>
    </table>
</div>



<!-- modal blog create  -->
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Add Blog</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/insertblog" method="post" enctype="multipart/form-data">
            <div class="md-3 mb-3">
                <label for="">Title</label>
                <input type="text" name="title" class="form-control">
            </div>
            <div class="md-3">
                <label for="">Description</label>
                <textarea type="text" name="description" class="form-control" id="" cols="30" rows="10"></textarea>
            </div>
            <div class="md-3 mb-3">
                <label for="">Upload image</label>
                <input type="file" name="image" class="form-control">
            </div>

            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-secondary me-2 bg-slate-500" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary bg-blue-500">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


