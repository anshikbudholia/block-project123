  <%- include('../admin-sidebar.ejs') %>

  <div class="w-3/5">
    <div class="flex justify-between mb-4">
      <div>
        <h1 class="text-3xl font-medium">Category update</h1>
      </div>
    
      
    </div>
    <form action="/categoryupdate/<%= edit._id %>" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="">title</label>
            <input type="text" class="form-control" name="title" value="<%= edit.cat_name %>">
        </div>
        <div class="mb-3">
            <label for="">description</label>
            <textarea type="text" name="description" class="form-control" id="" cols="30" rows="10"><%= edit.description %></textarea>
        
        <div class="mb-3">
          <label for="" class="mb-1">Upload Image</label>
          <input type="file" name="image" class="form-control">
        </div>
        </div>
        <img src="<%= edit.image.url %>" width="50px" alt="">
        <!--<button type="submit" class="btn btn-info">update</button>-->
        <div class="d-flex justify-content-end">
          <button type="button" class="btn btn-secondary me-2 bg-slate-500" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary bg-blue-500">Submit</button>
      </div>
    </form>
  </div>
  

    

